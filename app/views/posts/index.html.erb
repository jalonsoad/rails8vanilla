<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-6">






  <!-- New Post Button -->
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-xl font-bold">Posts</h1>

    <%= turbo_frame_tag "post_modal" do %>
      <%= link_to "New post", new_post_path, class: "underline" %>
    <% end %>

    <% link_to 'New Post', new_post_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg" %>
  </div>

  <!-- Posts Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @posts.each do |post| %>
      <!-- Post Card -->
      <div class="bg-white shadow-md rounded-lg">
        <!-- Post Image -->
        <% if post.body.embeds.any? && post.body.embeds.first.image? %>
          <%= image_tag url_for(post.body.embeds.first.variant(resize_to_fill: [400, 200])), alt: post.title, class: "rounded-t-lg w-full h-48 object-cover" %>
        <% else %>
          <%= image_tag 'default-placeholder.png', alt: 'Default image', class: "rounded-t-lg w-full h-48 object-cover" %>
        <% end %>
        <!-- Post Content -->
        <div class="p-4">
          <h2 class="text-lg font-semibold mb-2"><%= post.title %></h2>
          <p class="text-gray-600 text-sm mb-4"><%= truncate(strip_tags(post.body.to_s), length: 70) %></p>
          <div class="flex justify-between items-center">
            <%= link_to 'Show', post_path(post), class: "text-blue-600 hover:underline text-sm" %>
            <%= link_to 'Edit', edit_post_path(post), class: "text-yellow-600 hover:underline text-sm" %>
            <%= button_to post, method: :delete, form: { data: {turbo_confirm: "Are you sure you want to delete this message?" } }, class: "inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-red-600 rounded-lg hover:bg-red-800 focus:ring-4 focus:ring-red-300 dark:focus:ring-red-900"  do %>
                    <svg class="mr-2 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                    </svg>
                Delete
        <% end %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
